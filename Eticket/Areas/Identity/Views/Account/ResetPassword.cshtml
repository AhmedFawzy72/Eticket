@model Eticket.Models.ViewModels.ResetPasswordVM

@{
    ViewData["Title"] = "Reset Password";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg rounded-4 p-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-center mb-4 text-primary">🔑 Reset Your Password</h2>
        <p class="text-center text-muted mb-4">Please enter the verification code sent to your email to reset your password.</p>

        <form asp-action="ResetPassword" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" name="UserId" value="@Model.UserId" />

            <div class="mb-3">
                <label asp-for="Code" class="form-label">Verification Code</label>
                <input asp-for="Code" class="form-control form-control-lg" placeholder="Enter the code" />
                <span asp-validation-for="Code" class="text-danger small"></span>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-primary btn-lg">
                    Confirm & Reset
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

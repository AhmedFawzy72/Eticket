@model Eticket.Models.ViewModels.ForgetPasswordVM

@{
    ViewData["Title"] = "Forget Password";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg rounded-4 p-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-center mb-4 text-primary">🔒 Forgot Your Password?</h2>
        <p class="text-center text-muted mb-4">Please enter your email or username to reset your password.</p>

        <form asp-action="ForgetPassword" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="EmailORUserName" class="form-label">Email or Username</label>
                <input asp-for="EmailORUserName" class="form-control form-control-lg" placeholder="example@email.com or username" />
                <span asp-validation-for="EmailORUserName" class="text-danger small"></span>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-primary btn-lg">
                    Send Reset Link
                </button>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <partial name="_NotificationPartial.cshtml" />
}

@model Eticket.Models.ViewModels.ChangePasswordVM

@{
    ViewData["Title"] = "Change Password";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg rounded-4 p-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-center mb-4 text-primary"> Change Your Password</h2>
        <p class="text-center text-muted mb-4">Enter your new password and confirm it to complete the reset process.</p>

        <form asp-action="ChangePassword" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" name="UserId" value="@Model.UserId" />

            <div class="mb-3">
                <label asp-for="Password" class="form-label">New Password</label>
                <input asp-for="Password" class="form-control form-control-lg" placeholder="Enter new password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Re-enter new password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-primary btn-lg">
                    Change Password
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model Eticket.Models.ApplicationUser

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded-4 p-4">
                <div class="text-center mb-4">
                    <img src="~/images/ahmed.jpg" class="rounded-circle shadow" style="width: 120px; height: 120px;" alt="User Image">
                    <h3 class="mt-3">@Model.FirstName @Model.LastName</h3>
                    <p class="text-muted">@Model.Email</p>
                </div>

                <hr />

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Username:</div>
                    <div class="col-sm-8">@Model.UserName</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Email:</div>
                    <div class="col-sm-8">@Model.Email</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Phone:</div>
                    <div class="col-sm-8">@Model.PhoneNumber</div>
                </div>
                <div class="text-center mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit Profile </a>

                </div>
            </div>
        </div>
    </div>
</div>
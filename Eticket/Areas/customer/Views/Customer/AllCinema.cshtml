@model List<Cinema>



<table class="table">
    <thead>
        <tr>
            <th scope="col">Cinema Name</th>
            <th scope="col">Movie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Customer" asp-action="ShowMoviesByCinema" asp-route-cinemaId="@item.Id">Show</a>
                </td>
            </tr>
        }


    </tbody>
</table>
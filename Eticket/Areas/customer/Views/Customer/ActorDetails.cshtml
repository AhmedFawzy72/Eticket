@model Actor

<div class="container mt-5">
    <div class="card mb-3 shadow" style="max-width: 600px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="/images/cast/@Model.ProfilePicture" class="img-fluid rounded-start" alt="@Model.FirstName">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title text-primary"> First Name :@Model.FirstName</h5>
                    <h5 class="card-title text-primary">Last Name   :@Model.LastName</h5>

                    <p class="card-text"><strong>Bio:</strong> @Model.Bio</p>
                    <p class="card-text"><strong>Bio:</strong> @Model.News</p>

                </div>
            </div>
        </div>
    </div>
</div>

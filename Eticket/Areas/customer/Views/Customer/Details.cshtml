@using Eticket.Models.ViewModels
@model ModelsAndActorMovieVM

<div class="container py-5">

    <h2 class="mb-4 text-primary fw-bold text-center border-bottom pb-2">Movie Details</h2>

    <div class="card shadow-lg mb-5 border-0">
        <div class="row g-0">
            <div class="col-md-5">
                <img src="/images/movies/@Model.Movie.Images.FirstOrDefault()?.ImageUrl"
                     class="img-fluid rounded-start w-100 h-100 object-fit-cover"
                     alt="@Model.Movie.Name"
                     style="object-fit: cover;" />
            </div>

            <div class="col-md-7">
                <div class="card-body p-4">
                    <h3 class="card-title text-dark fw-bold">@Model.Movie.Name</h3>
                    <p class="text-muted">@Model.Movie.Description</p>

                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item">
                            <strong>Category:</strong> @Model.Movie.Category.Name
                        </li>
                        <li class="list-group-item">
                            <strong>Cinema:</strong> @Model.Movie.Cinema.Name
                        </li>
                        <li class="list-group-item">
                            <strong>Start Date:</strong> @Model.Movie.StartDate.ToShortDateString()
                        </li>
                        <li class="list-group-item">
                            <strong>End Date:</strong> @Model.Movie.EndtDate.ToShortDateString()
                        </li>
                        <li class="list-group-item">
                            <strong>Price:</strong> $@Model.Movie.Price
                        </li>
                    </ul>


                    <a href="/customer/customer/Index" class="btn btn-outline-secondary">Back to Movies</a>
                </div>
            </div>
        </div>
    </div>

    <div>
        <h4 class="text-center text-primary mb-4">Actors</h4>
        <div class="d-flex flex-wrap gap-4 justify-content-center">
            @foreach (var item in Model.actorMovies)
            {
                <div class="text-center">
                    <img src="/images/cast/@item.Actor.ProfilePicture"
                         class="rounded-circle border shadow-sm mb-2"
                         style="width: 80px; height: 80px; object-fit: cover;"
                         alt="@item.Actor.FirstName" />
                    <div>
                        <a class="btn btn-sm btn-outline-primary mt-1"
                           href="/customer/Customer/ActorDetails/@item.Actor.Id">
                            View Actor
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@using Eticket.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eticket</title>
    <script type="importmap"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/Eticket.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Logo" style="height: 40px; margin-right: 10px;" />
                    Eticket
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User is not null && User.Identity.IsAuthenticated)
                        {
                           
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="customer" asp-controller="Customer" asp-action="Index">All Movie</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="customer" asp-controller="Customer" asp-action="AllCategory">All Category</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="customer" asp-controller="Customer" asp-action="AllCinema">All Cinema</a>
                            </li>

                        }
                        <ul class="navbar-nav ms-auto d-flex flex-row gap-3">
                            @if(User is not null&& User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-primary"><h6> Welcome @User.Identity.Name</h6></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-danger" href="/Identity/Account/Logout">Logout</a>
                                </li>
                               @if(User.IsInRole(SD.SuperAdmin))
                               { 
                                <li class="nav-item">
                                    <a class="nav-link text-danger" href="/Admin">DashBord</a>
                                </li>
                               }
                                
                                <li class="nav-item">
                                 <a class="nav-link text-danger" href="/customer/Customer/Profile">Profile</a>
                                 </li>

                                <li class="nav-item">
                                   
                                </li>
                            }
                            else
                            {
                            <li class="nav-item">
                                <a class="nav-link" href="/Identity/Account/Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Identity/Account/Login">Login</a>
                            </li>
                                
                            }
                        </ul>

                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Eticket - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Script", required: false)

</body>
</html>
